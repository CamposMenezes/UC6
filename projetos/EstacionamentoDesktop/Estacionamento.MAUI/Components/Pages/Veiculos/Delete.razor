@page "/veiculos/delete/{id:int}"
@using Estacionamento.MAUI.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h3>Delete</h3>


@if (veiculo == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div>
        <h4>Ve√≠culo</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                Placa
            </dt>
            <dd class="col-sm-10">
                @veiculo.Placa
            </dd>
            <dt class="col-sm-2">
                Modelo
            </dt>
            <dd class="col-sm-10">
                @veiculo.Modelo
            </dd>
            <dt class="col-sm-2">
                Cor
            </dt>
            <dd class="col-sm-10">
                @veiculo.Cor
            </dd>
        </dl>

        <form @onsubmit="DeleteVeicuo">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i>
            </button>

            <a href="/veiculos" class="btn btn-light">Voltar</a>
        </form>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Veiculo? veiculo;

    protected override async Task OnInitializedAsync()
    {
        veiculo = await Http.GetFromJsonAsync<Veiculo>($"https://localhost:4000/api/Veiculos/{Id}");
    }

    async Task DeleteVeicuo()
    {

        await Http.DeleteAsync($"https://localhost:4000/api/Veiculos/{Id}");
        NavigationManager.NavigateTo("/veiculos");
    }
}
